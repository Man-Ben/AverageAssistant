<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AverageAssistant.AddPage"
             >


    <StackLayout
        HorizontalOptions="Center"
        VerticalOptions = "Center"
        >
        <Entry
            Placeholder = "Enter the Class Name"
            PlaceholderColor = "Snow"
            ClearButtonVisibility = "WhileEditing"
            TextColor = "Snow"
            
            ></Entry>
        <Picker
            Margin = "20"
            Title = "Select the Grade system"
            TitleColor = "Snow"
            ItemsSource = "{Binding gradeSystem}"
            SelectedItem = "{Binding selectedGradeSystem}"
            >
        </Picker>
        <Entry
            Placeholder = "Enter the number of lessons per week for this subject"
            PlaceholderColor = "Snow"
            ClearButtonVisibility = "WhileEditing"
            Keyboard = "Numeric"
            MaxLength="2"
            IsVisible = "{Binding entryVisible}"
            
            ></Entry>

        <HorizontalStackLayout
        Spacing="20"
        Margin = "40"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        >
            <Button
            Text = "Cancel"
            TextColor = "Snow"
            BackgroundColor = "Transparent"
            BorderColor=  "Snow"
            BorderWidth = "1"
            Command = "{Binding GoBackCommand}"
            ></Button>
            <Button
            Text = "Add"
            TextColor = "Snow"
            BackgroundColor = "DarkBlue"
            Command = "{Binding}"
            ></Button>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>