<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm = "clr-namespace:AverageAssistant.ViewModels"
             x:Class="AverageAssistant.ClassAverageListPage"
             x:DataType = "vm:CaViewModel"
    >
    <ScrollView>
    <Grid>

            <CollectionView ItemsSource = "{Binding UsersGrades}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:Double">
                        <Label
                            Text = "{Binding .}"
                            TextColor = "Snow"
                            ></Label>                       
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        
        <HorizontalStackLayout
                HorizontalOptions="End"
                VerticalOptions="End"
            >
            <Button
                Text="+"
                TextColor="White"
                FontSize = "50"
                Margin = "40"
                BackgroundColor="Transparent"
                Command = "{Binding GoToAddPageCommand}"
            ></Button>
        </HorizontalStackLayout>
    </Grid>
    </ScrollView>

</ContentPage>