<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm = "clr-namespace:AverageAssistant.ViewModels"
             x:Class="AverageAssistant.AddPage"
             x:DataType = "vm:AddPageTools"
             BackgroundColor = "{DynamicResource PrimaryBackgroundColor}"
             >
    <ScrollView>
    <StackLayout
        HorizontalOptions="Center"
        VerticalOptions = "Center"
        >

            <Label
                    Text = "Enter your grade"
            ></Label>
                
            <Entry
                    Text = "{Binding Grade}"
                    Margin = "10"
                    ClearButtonVisibility = "WhileEditing"
            ></Entry>


        <Label
                Margin = "10"
                Text = "Enter the subject's name"

             ></Label>
        
        <Entry
                Text = "{Binding SubjectName}"
                Margin = "10"
                ClearButtonVisibility = "WhileEditing"
        ></Entry>

        <Label
                Text="Enter your grades"
        ></Label>
        
        <Entry
            
            Text = "{Binding GradesInput}"
            Margin = "10"
            ClearButtonVisibility = "WhileEditing"
            Keyboard = "Numeric"
            
        ></Entry>

        <Label
                Text ="Select the Grade system" 
        ></Label>

            <Picker
            Margin = "10"   
            ItemsSource = "{Binding AverageSystemPicker}"
            SelectedItem = "{Binding SelectedAverageSystem}"
        >
        </Picker>
        <Label
             Text="Enter the number of lessons per week for this subject"
             IsVisible = "{Binding IsNrLessonsVisible}"
        ></Label>
        
        <Entry
            Text = "{Binding NumberOfLessonsInput}"
            Margin = "10"

            ClearButtonVisibility = "WhileEditing"
            Keyboard = "Numeric"
            MaxLength="2"
            IsVisible = "{Binding IsNrLessonsVisible}"
        ></Entry>
        
        <HorizontalStackLayout
        Spacing="20"
        Margin = "40"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        >
            <Button
            Text = "Cancel"
            BackgroundColor = "Transparent"
            BorderWidth = "1"
            Command = "{Binding ConfirmLeaveCommand}"
            ></Button>
            <Button
            Text = "Add"
            BorderWidth="1"
            BackgroundColor = "DarkBlue"
            Command = "{Binding AddCommand}"
            ></Button>
        </HorizontalStackLayout>
    </StackLayout>
    </ScrollView>
</ContentPage>