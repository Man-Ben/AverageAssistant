<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm = "clr-namespace:AverageAssistant.SettingsPageVM" 
             x:Class="AverageAssistant.SettingsPage"
             x:DataType="vm:SettingPageVM"
             BackgroundColor = "{DynamicResource PrimaryBackgroundColor}"
            >

    <StackLayout
        HorizontalOptions = "Center"
        VerticalOptions = "Start"
        >

        <Label
            Text = "Pick the app theme"
            Margin = "10"
            ></Label>

        <Picker
            ItemsSource = "{Binding AppthemPicker}"
            SelectedItem = "{Binding SelectedAppTheme}"
            >
        </Picker>

    </StackLayout>

</ContentPage>
